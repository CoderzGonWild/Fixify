<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeServicesFragment">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="@color/colorPrimary"
        android:text="My Services Provided" />

    <ListView
        android:id="@+id/list"
        android:layout_width="311dp"
        android:layout_height="335dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/services_add"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|left"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bluebutton"
        android:text="Add Services"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/services_remove"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center|right"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bluebutton"
        android:text="Remove Services"
        android:textColor="@color/white" />

</FrameLayout>